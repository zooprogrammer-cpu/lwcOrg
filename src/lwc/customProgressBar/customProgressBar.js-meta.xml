<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <description>Custom Progress Bar</description>
    <isExposed>true</isExposed>
    <masterLabel>Custom Progress Bar</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId" type="String" label="Id of the current record"/>
            <property name="objectName" type="String" label="Name of the Object"/>
            <property name="currentStep" type="String" label="Current Step" />
            <property name="stepsString" type="String" label="Comma-separated Steps" />
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>